@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div style="background-color:forestgreen">
    <header class="text-center">
        <h1 class="display-4">Welcome to Razor Pages</h1>
        <h2> By @Model.FullName </h2>
    </header>
    <br /><br />
    <form method="post" class="mx-auto" style="width:200px">
        <p class="col-sm-2">
            <label>Name</label>
            <input type="text" asp-for="FullName" required="true" placeholder="Enter Your Full Name"/>
        </p>
        <p class="col-sm-4">
            <label>Email</label>
            <input type="email" name="Email" required="true" placeholder="Enter Your Email Address"/>
        </p>
        <p class="col-sm-2">
            <button type="submit" class="btn btn-primary">
            Calculate
            </button>
        </p>
        <p class="col-sm-2">
            @ViewData["Message"]
        </p>
    </form>
</div>